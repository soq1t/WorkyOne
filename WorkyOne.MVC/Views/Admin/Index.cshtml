                <h3 class="text">Пользователи</h3>
            </a>
            <a asp-controller="Shifts" asp-action="Index" class="admin__tools-item">
                <span class="material-symbols-outlined icon">cards</span>
                <h3 class="text">Смены приложения</h3>
            </a>
