@{
    ViewData["Title"] = "Администрирование";
}

<head>
    <link rel="stylesheet" href="~/css/Pages/Admin/Admin.css" asp-append-version="true" />
</head>

<div class="admin wrapper wrapper--padding">
    <div class="card">
        <section class="card__section">
            <h3>Панель администрирования</h3>
        </section>
